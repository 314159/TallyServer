{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/include/BMDSwitcherAPIDispatch.cpp",
                "${workspaceFolder}/Switcher.cpp",
                "${workspaceFolder}/SwitcherInput.cpp",
                "${workspaceFolder}/SwitcherInputIterator.cpp",
                "${workspaceFolder}/CFString.cpp",
                "-std=c++2b",
                "-I",
                "${workspaceFolder}",
                "-framework",
                "CoreFoundation",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-fmodules"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}